

<%- include('head') %>
<%- include('header') %>

  

  <!-- Formulario de registro -->
  <main>
    <form>
      <h2>Crear cuenta</h2>

      <label for="nombre">Nombre completo:</label>
      <input type="text" id="nombre" placeholder="Ej. Aldo Gavilán" />

      <label for="email">Correo electrónico:</label>
      <input type="email" id="email" placeholder="Ej. aldo@example.com" />

      <label for="password">Contraseña:</label>
      <input type="password" id="password" placeholder="••••••••" />

      <!-- Simulación de error -->
      <div class="error-msg">Este correo ya está en uso.</div>

      <button type="submit">Registrarse</button>
    </form>
  </main>

  <!-- Footer -->
  <footer>
    <p>© 2025 Muscle Power</p>
    <p>Contacto | Política | Redes</p>
  </footer>

</body>
</html>
